{
  "header": {
    "head-tag": {
      "canonical-path": "templates/e-commerce/product-details.amp",
      "extensions": [
        "amp-sidebar",
        "amp-list",
        "amp-bind"
      ],
      "templates": [
        "amp-mustache"
      ]
    }
  },
  "main": {
    "banner": {
      "image": {
        "url": "../../img/e-commerce/wide-listings-hero.jpg",
        "width": 2560,
        "height": 400,
        "alt": "Product listing"
      }
    },
    "filters": {
      "categories": {
        "radio": [
          {
            "name": "category",
            "id": "all",
            "label": "All",
            "on": "change: AMP.setState({products: {category: 'all'}})",
            "checked": "checked"
          },
          {
            "name": "category",
            "id": "bikes",
            "label": "Bikes",
            "on": "change: AMP.setState({products: {category: 'bikes'}})"
          },
          {
            "name": "category",
            "id": "accessories",
            "label": "Accessories",
            "on": "change: AMP.setState({products: {category: 'accessories'}})"
          },
          {
            "name": "category",
            "id": "components",
            "label": "Components",
            "on": "change: AMP.setState({products: {category: 'components'}})"
          }
        ],
        "commerce-select": {
          "spacing-classes": "md-mr1 pl2",
          "responsive-display-classes": "md-hide lg-hide",
          "on": "change: AMP.setState({products: {category: event.value}})",
          "placeholder": "Show:",
          "options": [{
            "value": "all",
            "text": "all"
          }, {
            "value": "bikes",
            "text": "bikes"
          }, {
            "value": "accessories",
            "text": "accessories"
          }, {
            "value": "components",
            "text": "components"
          }],
          "id": "categories",
          "name": "categories"
        }
      },
      "price": {
        "commerce-select": {
          "on": "change: AMP.setState({products: {filter: event.value}})",
          "placeholder": "Sort by:",
          "options": [{
            "value": "high-low",
            "text": "Price: High-Low"
          },{
            "value": "low-high",
            "text": "Price: Low-High"
          }],
          "id": "price",
          "name": "price"
        }
      }
    }
  }
}
